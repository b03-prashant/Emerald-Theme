{{ "custom-subscribe.css" | asset_url | stylesheet_tag }}

{% style %}
    .custom-subscribe--{{ section.id }} {
        background-color: {{ section.settings.subscribe_background }};
        padding-top: {{ section.settings.padding_top | divided_by: 2 }}px;
        padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
    }
    @media screen and (min-width: 749px) {
        .custom-subscribe--{{ section.id }} {
            padding-top: {{ section.settings.padding_top }}px;
            padding-bottom: {{ section.settings.padding_bottom }}px; 
        }
        .custom-subscribe--heading {
            font-size: 56px;
        }
        .custom-subscribe--input-fields {
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
        }
        .custom-subscribe--input {
            margin: 0;
            margin-right: 20px;
            width: 394px;
        }
        .custom-subscribe--button {
            width: 140px;
        }
    }
{% endstyle %}

<div class="custom-subscribe custom-subscribe--{{ section.id }}">
    <div class="custom-subscribe--section">
        <h2 class="custom-subscribe--heading">{{ section.settings.heading_text }}</h2>
        <div class="custom-subscribe--input-fields" >
            <input type="email" placeholder="Email Address" class="custom-subscribe--input"/>
            <a class="custom-subscribe--button-wrapper" href="{{ section.settings.button_url }}">
                <button class="custom-subscribe--button" type="button">{{ section.settings.button_text }}</button>
            </a> 
        </div>
    </div>
</div>

{% schema %}
    {
        "name": "Custom Subscribe",
        "tag": "section",
        "class": "section",
        "settings": [
            {
                "type": "color",
                "id": "subscribe_background",
                "label": "background color",
                "default": "#EDFF84"
            },
            {
                "type": "text",
                "id": "heading_text",
                "label": "Newsletter text",
                "default": "Subscribe to our Newsletter"
            },
            {
                "type": "text",
                "id": "button_text",
                "label": "Button text",
                "default": "Subscribe"
            },
            {
                "type": "url",
                "id": "button_url",
                "label": "Button link"
            },
            {
                "type": "header",
                "content": "Section padding"
            },
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 100,
                "step": 10,
                "unit": "px",
                "label": "Padding top",
                "default": 40
            },
            {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 100,
                "step": 10,
                "unit": "px",
                "label": "Padding botttom",
                "default": 40
            }
        ],
        "presets": [
            {
                "name": "Custom Subscribe"
            }
        ]
    }
{% endschema %}