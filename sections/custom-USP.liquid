<style>
    div, h2, h6, p {
        margin: 0;
        padding: 0;
    }
    p {
        word-spacing: .001em;
        font-feature-settings: "kern" 1;
        font-kerning: normal;
        line-height: calc(1.0* 1.6);
    }
    p {
        display: block;
        margin-block-start: 1em;
        margin-block-end: 1em;
        margin-inline-start: 0px;
        margin-inline-end: 0px;
        unicode-bidi: isolate;
    }
    .custom-usp {
        width: 100%;
        height: 214px;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1.2rem;
        box-sizing: boder-box;
        margin: 0;
        padding: 30px 0;
        background: #f9f5f0;
        overflow-x: auto;
    }
    .custom-usp::-webkit-scrollbar {
        display: none;
    }
    
    /* Hide scrollbar for Firefox */
    .custom-usp {
        scrollbar-width: none;
    }

    .custom-usp .custom-usp__slide .custome-usp__title{
      text-align: center;
      font-size: 20px;
      width: 100%;
      height: 20px;
      font-weight: 500;
      margin-bottom: 10px;
      color: #263d2d;
      line-height: 1;
      letter-spacing: -0.02em;
    }
    .custom-usp__description {
      font-size: 15px;
      color: #3b5342;
      font-weight: 400;
      font-style: normal;
      margin: 0;
      text-align: center;
    }
    .custom-usp__slide{
        height: auto;
        max-width: 300px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        padding: 0;
        box-sizing: border-box;
    }
    .custom-usp__image {
        width: auto;
    }

  @media screen and (max-width: 1024px){
    .custom-usp {
      display: grid;
      grid-template-columns: repeat(2, 300px);
      gap: 2rem;
    }
    
  }
  @media screen and (max-width: 767px) {
    .custom-usp {
      padding-left: 20px;
      display: flex;
      flex-direction: row;
      justify-content: flex-start;
      align-items: flex-start;
      overflow: auto;
    }
    .custom-usp::-webkit-scrollbar {
        display: none;
    }
    
    /* Hide scrollbar for Firefox */
    .custom-usp {
        scrollbar-width: none;
    }
    .custom-usp__slide {
        min-width: 300px;
    }
  }
</style>


<div class="custom-usp">
    
    {% for block in section.blocks %}
    <div class="custom-usp__slide">
        {% if block.settings.image_url != empty %}
          <div class="custom-usp__image">
            {% if block.settings.image_picker != blank  %}
                <img src="{{ block.settings.image_picker | image_url }}" alt="select image" height="32" width="32" />
            {% endif %}  
          </div>
        {% endif %}
        
        <div>
            <h2 class="custome-usp__title" >{{ block.settings.title }}</h2>
            <p class='custom-usp__description'>{{ block.settings.description }}</p>
        </div>
    </div>
    {% endfor %}
</div>

{% schema %}
    {
        "name": "Custom USP",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "My Custom Heading"
            }
        ],
        "blocks": [
            {
                "name": "slide",
                "type": "column",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image_picker",
                        "label": "Select Image"
                    },
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title",
                        "default": "Title"
                    },
                    {
                        "type": "text",
                        "id": "description",
                        "label": "Description",
                        "default": "Text about Photo"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Custom USP"
            }
        ]
    }
{% endschema %}