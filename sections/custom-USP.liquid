<style>
    .custom-container {
        width: 100%;
        height: 214px;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1.2rem;
        box-sizing: boder-box;
        margin: 0;
        padding: 30px 0;
        background: #f9f5f0;
        overflow-x: auto;
    }
    .custom-container::-webkit-scrollbar {
        display: none;
    }
    
    /* Hide scrollbar for Firefox */
    .custom-container {
        scrollbar-width: none;
    }

    .custome-container__title{
      font-size: 20px;
      font-weight: 600;
      margin: 0px 0px 10px;
      color: #263d2d;
    }
    .custom-container__description {
      font-size: 15px;
      color: #3b5342;
      font-weight: 400;
      font-style: normal;
      margin: 0;
      text-align: center;
    }
    .custom-container__slide{
        height: 130px;
        min-width: 300px;
        max-width: 300px;
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        align-items: center;
        padding: 0;
        box-sizing: border-box;
    }
    .custom-container__image {
        width: auto;
    }

  @media screen and (max-width: 1024px){
    .custom-container {
      height: auto;
      display: grid;
      grid-template-columns: repeat(2, 300px);
      gap: 2rem;
    }
  }
  @media screen and (max-width: 767px) {
    .custom-container {
      padding-left: 20px;
      display: flex;
      flex-direction: row;
      justify-content: flex-start;
      align-items: flex-start;
      overflow-x: auto;
    }
    .custom-container::-webkit-scrollbar {
        display: none;
    }
    
    /* Hide scrollbar for Firefox */
    .custom-container {
        scrollbar-width: none;
    }
  }
</style>


<div class="custom-container">
    
    {% for block in section.blocks %}
    <div class="custom-container__slide">
        {% if block.settings.image_url != empty %}
          <div class="custom-container__image">
            <img src="{{ block.settings.image_url }}" alt="select image" height="32" width="32" />
          </div>
        {% endif %}

        <h2 class="custome-container__title" >{{ block.settings.title }}</h2>
        <p class='custom-container__description'>{{ block.settings.description }}</p>
    </div>
    {% endfor %}
</div>

{% schema %}
    {
        "name": "Custom USP",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "My Custom Heading"
            }
        ],
        "blocks": [
            {
                "name": "slide",
                "type": "column",
                "settings": [
                    {
                        "type": "url",
                        "id" : "image_url",
                        "label" :  "Image"
                    },
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title",
                        "default": "Title"
                    },
                    {
                        "type": "text",
                        "id": "description",
                        "label": "Description",
                        "default": "Text about Photo"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Custom USP"
            }
        ]
    }
{% endschema %}