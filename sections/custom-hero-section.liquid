{{ 'custom-hero-section.css' | asset_url | stylesheet_tag }} 

{% style %}
    .custom-slideshow--{{ section.id }} {
        padding-top: {{ section.settings.padding_top | divided_by: 2 }}px;
        padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
    }

    @media screen and (max-width: 749px) {
        .custom-slideshow--{{ section.id }} {
            padding-top: {{ section.settings.padding_top }}px;
            padding-bottom: {{ section.settings.padding_bottom }}px; 
    }
}

{% endstyle %}

<div class="custom-slideshow custom-slideshow-wrapper page-width custom-slideshow--{{ section.id }}">
    {% for block in section.blocks %}
        
    {% endfor %}
</div>

{% schema %}
    {
    "name": "Custom Hero Section",
    "tag": "section",
    "class": "section",
    "settings": [
        {
            "type": "header",
            "content": "Slider options"
        },
        {
            "type": "checkbox",
            "id": "auto_play",
            "label": "Enable autoplay",
            "default": false
        },
        {
            "type": "checkbox",
            "id": "show_arrows",
            "label": "Show arrows",
            "default": false
        },
        {
            "type": "checkbox",
            "id": "show_pagination",
            "label": "Show dots",
            "default": false
        },
        {
            "type": "range",
            "id": "auto_play_duration",
            "min": 1000,
            "max": 5000,
            "step": 1000,
            "unit": "ms",
            "label": "Autoplay Duration",
            "default": 2000
        },
        {
            "type": "select",
            "id": "slide_animation",
            "label": "slider animation",
            "options": [
                {
                    "value": "fade",
                    "label": "Fade"
                },
                {
                    "value": "slide",
                    "label": "Slide"
                },
                {
                    "value": "loop",
                    "label": "Loop"
                }    
            ],
            "default": "slide"
        },
        {
            "type": "header",
            "content": "Section padding"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 10,
            "unit": "px",
            "label": "Padding top",
            "default": 40
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 10,
            "unit": "px",
            "label": "Padding botttom",
            "default": 40
        }
    ],
    "blocks": [
        {
            "type": "slide",
            "name": "Slide",
            "settings": [
                {
                    "type": "header",
                    "content": "Media Option"
                },
                {
                    "type": "video",
                    "id": "video_url",
                    "label": "Select viedo"
                },
                {
                    "type": "image_picker",
                    "id": "desktop_image",
                    "label": "Desktop image",
                    "info": "Recommended Size: 1360 x 633 px"
                },
                {
                    "type": "image_picker",
                    "id": "mobile_image",
                    "label": "Mobile image",
                    "info": "Recommended Size: 360 x 282 px"
                },
                {
                    "type": "header",
                    "content": "Content Text"
                },
                {
                    "type": "richtext",
                    "id": "rich_text",
                    "label": "Rich text",
                    "default": "<p>Write your rich text here</p>"
                },
                {
                    "type": "text",
                    "id": "button_text",
                    "label": "Button text",
                    "default": "Shop"

                },
                {
                    "type": "url",
                    "id": "button_url",
                    "label": "Button url"
                },
                {
                    "type": "header",
                    "content": "Content alignment customizations"
                   
                },
                {
                    "type": "select",
                    "id": "destop_content_position",
                    "label": "Desktop content position",
                    "options": [
                        {
                            "value": "top-left",
                            "label": "Top left"
                        },
                        {
                            "value": "top-center",
                            "label": "Top Center"
                        },
                        {
                            "value": "top-right",
                            "label": "Top right"
                        },
                        {
                            "value": "center-left",
                            "label": "Center left"
                        },
                        {
                            "value": "center-center",
                            "label": "Center Center"
                        },
                        {
                            "value": "Center right",
                            "label": "center-right"
                        },
                        {
                            "value": "Bottom left",
                            "label": "bottom-left"
                        },
                        {
                            "value": "Bottom Center",
                            "label": "bottom-center"
                        },
                        {
                            "value": "Bottom right",
                            "label": "bottom-right"
                        }
                    ],
                    "default": "center-center"
                },
                {
                    "type": "select",
                    "id": "destop_content_alignment",
                    "label": "Destop Alignment",
                    "options": [
                        {
                        "value": "left",
                        "label": "Left"
                        },
                        {
                            "value": "center",
                            "label": "Center"
                        },
                        {
                            "value": "right",
                            "label": "Right"
                        }
                    ],
                    "default": "center"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Custom Hero Section",
            "blocks": [
                {
                    "type": "slide"
                },
                {
                    "type": "slide"
                },
                {
                    "type": "slide"
                }   
            ]
            
            
        }
    ]   
    
    }
{% endschema %}