<style>
  {% for block in section.blocks %}
  .my-custom-swatches .custom-swatch--{{ block.settings.solide_color_name | downcase | handle }}{
    background-color: {{ block.settings.solid_color }} !important;
    height: 30px!important;
    padding: 1rem 1.5rem!important;
    border-radius: 50%;
  }
  .item-swatch [data-value="{{ block.settings.solide_color_name }}"],
  .item-swatch [data-value="{{ block.settings.solide_color_name | downcase }}"],
  .item-swatch [data-value="{{ block.settings.solide_color_name | downcase | handle }}"],
  .item-swatch [data-value="{{ block.settings.solide_color_name | capitalize  }}"],
  .swatch [data-value="{{ block.settings.solide_color_name }}"] .bgImg,
  .swatch [data-value="{{ block.settings.solide_color_name | downcase }}"] .bgImg,
  .swatch [data-value="{{ block.settings.solide_color_name | capitalize  }}"] .bgImg,
  .color-swatch-enabled[data-tag="{{ block.settings.solide_color_name }}"] span,
  .color-swatch-enabled[data-tag="{{ block.settings.solide_color_name | downcase }}"] span,
  .color-swatch-enabled[data-tag="{{ block.settings.solide_color_name | capitalize }}"] span {
    background-color: {{ block.settings.solid_color }} !important;
    margin: 1px !important;
  }
  {% endfor %}
</style>

{% schema %}
{
  "name": "Swatches",
  "settings": [

  ],
  "blocks": [
    {
      "name": "Solid color",
      "type": "solid-color",
      "settings": [
        {
          "type": "text",
          "id": "solide_color_name",
          "label": "Color name"
        },
        {
          "type": "color",
          "id": "solid_color",
          "label": "Color"
        },
        {
          "type": "header",
          "content": "Choose image or color according to your need"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Swatch image"
        }
      ]
    }
  ]
}
{% endschema %}
