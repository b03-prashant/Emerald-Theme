<style>
  {% for block in section.blocks %}
    .my-custom-swatches .custom-swatch--{{ block.settings.solide_color_name | handleize }}{
      border-radius: 50%;
      padding: 0;
      {% if block.settings.image != blank or block.settings.solide_color_name == blank %}
      background:url("{{ block.settings.image | img_url:"small" }}") fixed no-repeat center/cover;
      {% else %}
      background: {{ block.settings.solid_color }} !important;
      {% endif %}
    }

  {% endfor %}
</style>

{% schema %}
{
  "name": "Swatches",
  "settings": [

  ],
  "blocks": [
    {
      "name": "Solid color",
      "type": "solid-color",
      "settings": [
        {
          "type": "text",
          "id": "solide_color_name",
          "label": "Color name"
        },
        {
          "type": "color",
          "id": "solid_color",
          "label": "Color"
        },
        {
          "type": "header",
          "content": "Choose image or color according to your need"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Swatch image"
        }
      ]
    }
  ]
}
{% endschema %}
