<style>
  {% for block in section.blocks %}
    .my-custom-swatches .custom-swatch--{{ block.settings.solide_color_name | handleize }}{

      {% if block.settings.image != blank or block.settings.solide_color_name == blank %}
      background:url("{{ block.settings.image | img_url:"small" }}") fixed no-repeat center/cover;
      {% else %}
      background: {{ block.settings.solid_color }} !important;
      {% endif %}
    }
  {% endfor %}
</style>

<style>
  {% for block in section.blocks %}
    .custom .color-swatch--{{ block.settings.title | handleize }}{
      {% if block.settings.image != blank or block.settings.title == blank %}
      background:url("{{ block.settings.image | img_url:"small" }}") fixed no-repeat center/cover;
      {% else %}
      background:{{ block.settings.color_code }};
      {% endif %}
    }
  {% endfor %}
</style>

{% schema %}
{
  "name": "Swatches",
  "settings": [

  ],
  "blocks": [
    {
      "name": "Solid color",
      "type": "solid-color",
      "settings": [
        {
          "type": "color",
          "id": "solid_color",
          "label": "Solid color"
        },
        {
          "type": "text",
          "id": "solide_color_name",
          "label": "Solide color name"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Swatch image"
        }
      ]
    }
  ]
}
{% endschema %}
